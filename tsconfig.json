{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "sourceMap": true,
        "target": "es6",
        "typeRoots": [
            "src/types/",
            "node_modules/@types/"
        ]
    },
    "filesGlob": [
        "src/**/*.ts",
        "test/**/*.ts"
    ]
}